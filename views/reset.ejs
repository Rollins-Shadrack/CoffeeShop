<div class="mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h3>Reset Password</h3>
            <p>for <b><%= email %></b> </p>
            <%- include ("./partials/messages") %>
            <form action="/users/resetPass/:id/:token" method="POST">
                <div class="form-group">
                    <label for="password">Password</label>
                    <input style="width:400px"  type="password"
                    id="password"
                    name="password"
                    class="form-control show"
                    placeholder="enter password"
                    value="<% typeof password != 'undefined' ? password : ''%>">

                </div>
                <div class="form-group">
                    <label for="password2">Confirm Password</label>
                    <input style="width:400px"  type="password"
                    id="password2"
                    name="password2"
                    class="form-control "
                    placeholder="confirm password"
                    value="<% typeof password != 'undefined' ? password : ''%>">
                    
                </div>
                <div class="form-group mt-2"><button type="submit" class="btn btn-success btn-block">Reset</button></div>
            </form>
        </div>
    </div>
</div>
