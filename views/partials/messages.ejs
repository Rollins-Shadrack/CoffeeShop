<% if (typeof errors != 'undefined') {%>
    <% errors.forEach(function (error) { %>
      <div class="alert alert-warning alert-dismisable fade show " role="alert">
    <%= error.msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
      <% }) %>
    
    
    <% } %>

    <% if (typeof success != 'undefined') {%>
      <% success.forEach(function (suc) { %>
        <div class="alert alert-success alert-dismisable fade show " role="alert">
      <%= suc.msg %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% }) %>
      
      
      <% } %>
      
      <% if(success_alert_message != ''){ %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= success_alert_message %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
    <% } %>
    
    <% if(error_message != ''){ %>
      <div class="alert alert-info alert-dismisable fade show " role="alert">
          <%= error_message %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        </div>
    <% } %>